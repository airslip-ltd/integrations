<policies>
    <inbound>
        <cors allow-credentials="true">
            <allowed-origins>
                <origin>https://dev-secure.airslip.com</origin>
                <origin>https://demo-secure.airslip.com</origin>
                <origin>https://dev-admin.airslip.com</origin>
                <origin>https://local.secure.dev.ngrok.io</origin>
                <origin>https://dev.airslip.com.eu.ngrok.io</origin>
            </allowed-origins>
            <allowed-methods preflight-result-max-age="300">
                <method>*</method>
            </allowed-methods>
            <allowed-headers>
                <header>*</header>
            </allowed-headers>
            <expose-headers>
                <header>*</header>
            </expose-headers>
        </cors>
    </inbound>
    <backend>
        <forward-request />
    </backend>
    <outbound />
    <on-error />
</policies>